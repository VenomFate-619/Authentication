<%- include("./partials/header.ejs") %>
<link rel="stylesheet" href="/css/register.css">
</head>
<body>
    <div id="register_content">
   <h1><i class="fas fa-user-plus"></i> Register</h1>
   <%- include("./partials/message.ejs") %>
   <form action="/users/register" method="POST">
    <label for="name">Name</label><br>
    <input type="text" name="name" id="name" placeholder="Enter Name" value='<%= field.name!==""? field.name:"" %>' class='<%= validation.indexOf("name")===-1?"":"invalid" %>'>
    <label for="name">Email</label><br>
    <input type="email" name="email" id="email" placeholder="Enter Email" value='<%= field.email!==""? field.email:"" %>' class='<%= validation.indexOf("email")===-1?"":"invalid" %>'>
    <label for="contact">Contact Number</label><br>
    <input type="tel" name="contact" id="contact" placeholder="Enter Number" value='<%= field.contact!==""? field.contact:"" %>' class='<%= validation.indexOf("contact")===-1?"":"invalid" %>'>
    <label for="name">Password</label><br>
    <input type="password" name="password" id="password" placeholder="Enter Password" value='<%= field.password!==""? field.password:"" %>' class='<%= validation.indexOf("password")===-1?"":"invalid" %>'>
    <label for="name">Confirm Password</label><br>
    <input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm Password" value='<%= field.confirm_password==""? field.confirm_password:"" %>' class= '<%= validation.indexOf("confirm_password")==-1? "":"invalid" %>'>
    <button type="submit" id="register">Register</button>
   </form> 
   <p>Have An Account? <a href="/users/login">Login</a></p>
   </div>
   <%- include("./partials/script.ejs") %>  
   <script src="/js/register.js"></script>
 <%- include("./partials/footer.ejs") %>   
