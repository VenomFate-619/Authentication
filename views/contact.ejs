   <h1><i class="fas fa-phone-square-alt"></i> Contact Number</h1>
   <%- include("./partials/message.ejs") %>
   <form action="/users/reset" method="POST">
    <label for="name">Phone Number</label><br>
    <input type="tel" name="contact"  placeholder="Enter Number" value='<%= field.contact!==""? field.contact:"" %>' class='<%= validation.indexOf("contact")===-1?"":"invalid" %>'>
    <button type="submit" id="submit">Submit</button>
   </form> 
   </div>
